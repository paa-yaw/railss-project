<div class="container-fluid">            
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
              
         <div class="panel panel-info">
            <div class="panel-heading">
              <h2 class="panel-title text-center" style="color:#fff;">Assigned Cleaner</h2>
            </div>
              <div class="panel-body">


              <div id="profile" class="tab-pane active">

                <section class="panel">
                  <div>
                  Hello <%= current_client.first_name %>,<br> <strong><%= @worker.first_name %> <%= @worker.last_name %></strong> has been assigned to your request and will arrive at your location shortly. <br> Here is <%= @worker.first_name %>'s bio below:
                  </div>
                  <br>
                  <div class="panel-body bio-graph-info">
                  <div class="row">
                    <div class="col-md-4">
                       <!-- <#%= image_tag "pic01.jpg", class: "img-responsive img-thumbnail", alt: "pic01", :style => "margin-left:0px;" %> -->
                      <%= link_to (image_tag @worker.photo_url(:thumb)), @worker.photo.url, class: "img-circle img-responsive" %>
                    </div>
                    <div class="col-md-8">
                      <div class="row">
                        <div class="col-md-6" style="list-style:none;">
                          <li>
                              <p><span><b>First Name:</b> </span><%= @worker.first_name %></p>
                          </li>
                          <li>
                             <p><span><b>Last Name:</b> </span> <%= @worker.last_name %></p>
                          </li>
                          <li>
                             <p><span><b>Age:</b></span><%= @worker.age %></p>

                          </li>
                          <li>
                            <p><span><b>Sex:</b></span>  <%= @worker.sex %></p>
                          
                          </li>
                          <li>
                              <p><span><b>Phone:</b></span>020-061-0307</p>
                          </li>
                        </div>
                        <div class="col-md-6" style="list-style:none;">
                          <li>
                              <p><span><b>Email:</b></span>hello@springgh.com</p>
                          </li>
                          <li>
                              <p><span><b>Work Experience:</b> </span><%= @worker.experience %></p>
                          </li>
                          <li>
                              <p><span><b>Remarks:</b> </span> very hardworking</p>
                          </li>
                          <li>
                            <p><span><b>Ratings:</b></span><div class="star-rating" data-score= <%= @average_rating %>></div></p>
                          </li>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                    <div class="report-button pull-right" style="">
                      <%= link_to fa_icon("flag") + " Report This Cleaner", new_worker_report_path(@worker), class: "btn btn-danger" %>
                    </div>
                </section>
              </div>
            </div>
          </div>

          <section class="panel">
            <div class="panel-body">
                  <%= render "reviews/form" %>
            </div>
          </section>
                
     </div>
  </div>
 </div>
</div>



<script>
  $('.star-rating').raty({
    path: '/assets/', 
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script> 