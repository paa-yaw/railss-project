 <div class="modal fade" id="myModal" data-backdrop="static" data-keyboard="false" style="margin-top:50px;">
    <div class="row">
    <div class="col-md-4 col-md-offset-4 col-xs-10 col-xs-offset-1">
      <div class="modal-header" style="border-bottom-width: 0px; border-top:solid 1px #000; padding-left:0px; padding-right:0px; border-radius:0px;background:#fff;">
          <!-- <a class="close" data-dismiss="modal" style="margin-right:10px;">Ã—</a> -->
          <div class="text-center" style="width:30%; margin: 0 auto;">
            <%= image_tag("spring2-logo-final.png", :alt => "spring logo", :class => "img-responsive") %>
          </div> 
      </div>
      <div class="modal-body text-center" style="background:#fff;">

                      <p style="text-transform:uppercase;color:#18BADB;">You have booked cleaning for </p>  
                      <p>
                      <b>
                   <%= pluralize(@request.bedrooms, "bedroom")%>,
                      <%= pluralize(@request.bathrooms, "bathroom")%>,
                      <%= pluralize(@request.hall, "living room")%>, 
                      <%= pluralize(@request.kitchens, "kitchen") %></br>
                      (GHS <%= (@request.bathrooms + @request.bedrooms + @request.kitchens + @request.hall) * 5 %>.00)
                      </b>
                       </p>
                      <br>
                      <p style="text-transform:uppercase;color:#18BADB;"> with the following extra services</p>
                    
                      <b>
                      <p>
                        <% if @request.extra_services.length > 1 %>
                        <% @request.extra_services.each do |extra_services| %>
                        <% if extra_services == 15.00 %>
                        <p>Compound Cleaning(GHS 15.00)</p>
                        <% end %>

                        <% if extra_services == 10.01 %>
                        <p>Fridge(GHS 10.00)</p>
                        <% end %>

                        <% if extra_services == 10.00 %>
                        <p>Storeroom(GHS 10.00)</p>
                        <% end %>

                        <% if extra_services == 40.00 %>
                        <p>Laundry(GHS 40.00)</p>
                        <% end %>

                        <% end %>
                        <% elsif @request.extra_services.length < 2 %>
                        <p>None Selected</p>
                        <% end %>
                          
                      </p>
                      </b>

                      <p style="text-transform:uppercase;color:#18BADB;"> with a service package of </p>
                      <p> 
                        <b>
                          <% if @request.frequency == 150.00 %>
                              One-Time(GHS 150.00)
                          <% elsif @request.frequency == 200.00 %>
                              Weekly(GHS 200.00)
                          <% elsif @request.frequency == 500.00 %>
                              Monthly(GHS 500.00) 
                          <% end %>
                        </b>                  
                      </p>
                      <!-- <br> -->
                  <p style="text-transform:uppercase;color:#18BADB;">
                      scheduled for </p>
    <p><b> <%= @request.date.to_date.strftime("%A, %d %B %Y")%> at <%= @request.time.strftime("%l %M %p")%>.</b></p>
    <!-- <br> -->
    <p style="text-transform:uppercase;color:#18BADB;"> Your phone number is </p>
    <p><b> <%= @request.client.phone_number %></b> </p>
    <!-- <br> -->
    <p style="text-transform:uppercase;color:#18BADB;">  you are located at </p>
    <p><b> <%= @request.client.location %></b></p>
    <p style="text-transform:uppercase;color:#18BADB;">  Your Total Cost is </p>
    <% if @request.promocode == "mothersday2016" %>
    <p><b style="text-decoration: line-through;">GHS <%= @request.total_cost.to_i / 0.8 %>.00</b></p>
    <h4><b> GHS <%= @request.total_cost.to_i %>.00</b>(20% off)</h4>
    <% else %>
    <p><b>GHS <%= @request.total_cost.to_i %>.00</b></p>
    <% end %>
                      <!-- </div> -->
    <hr>
      <h3><%= link_to fa_icon("thumbs-up") + " Confirm", request_path(@request), class: "btn btn-primary" %>  <%= link_to fa_icon("pencil") + " Edit", edit_request_path(@request), :class=>"btn btn-info" %>
      </h3>  
          <!-- </div> -->
      </div>
      </div>
    </div>
  </div>

  <script>
  (function(){
    $(window).ready(function () {
      $('#myModal').modal();
    });
  })();
  </script>

  <style>
#header{
 z-index: 900;
  }
  </style>
