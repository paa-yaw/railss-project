	</head>
	<body>

<header class="navbar navbar-bright navbar-fixed-top" role="banner">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
  </div>
</header>


<div id="masthead">  
  <div class="container">

    <div class="row">

      <div class="col-md-10 col-md-offset-1 col-sm-12">
          <p class="lead">
            <h1 style="margin-top:5px; color:#fff;">Blog

         <div class="pull-right buttons-bar" style="vertical-align:middle;">
               <%= link_to fa_icon("envelope") + "Subscribe to our weekly newsletter", root_path, class: "btn btn-info pull-right", :style=>"margin-top:8px;" %>
         </div>
         </h1>
        </p>

      </div>
    </div> 

  </div><!-- /cont -->
</div>

         <br>

<div class="container">
  <div class="row">
    
    <div class="col-md-10 col-md-offset-1"> 
      
      <div class="panel">
        <div class="panel-body">
          
          
          <!--/stories-->
          <div class="row">    
          	<% @articles.each do |article| %>
            <br>
            <div class="col-md-3 col-sm-3 text-center">
              <a class="story-title" href="#"><%= link_to (image_tag article.caption_photo_url(:thumb), width:"100%", class:"img-square"), article_path(article) %></a>
            </div>

            <div class="col-md-9 col-sm-9">
              <h3 style="margin-top:0px;"><%= link_to article.caption, article_path(article) %></h3>
              <div class="row">
                <div class="col-xs-9">

                  <h4><span class="label label-default"><i class="fa fa-user" aria-hidden="true"></i>&nbsp;
											by <%= article.client.first_name %> <%= article.client.last_name %></span></h4>

									<h4>

                  <small style="font-family:'Lato';" class="text-muted">
                  <%= article.created_at.strftime("%A, %d %B %Y") %></small>  â€¢ 
                  <% if article.content.length < 1000 %>
										<small style="font-family:'Lato';" class="text-muted"><i class="fa fa-book" aria-hidden="true"></i> 1 min read</small>
										<% elsif article.content.length > 1000 && article.content.length < 2000 %>
										<small style="font-family:'Lato';" class="text-muted"><i class="fa fa-book" aria-hidden="true"></i> 2 min read</small>
										<% elsif article.content.length > 2000 %>
										<small style="font-family:'Lato';" class="text-muted"><i class="fa fa-book" aria-hidden="true"></i> 5 min read</small>
										<% end %>	
									

                  </h4>

                  <p class="text-muted">
										<%= truncate(article.content, :length => 500) %>
										<% if article.content.length > 500 %>
										<strong><%= link_to "Read More", article_path(article) %></strong>
									</p>
										<% end %>

                  </div>
	                <div class="col-xs-3"></div>
              </div>
            </div>

          </div>
          <hr>

          <% end %>
          
          <!--/stories-->
          
          
          <!-- <br> -->
          
        </div>
          <a href="/" class="btn btn-primary pull-right btnNext">More </a>
          <br>
      </div>
                                                                                       
                                                  
                                                      
    </div><!--/col-12-->
  </div>
</div>
<footer id="footer" >
    <div class="container">
      <div class="copyright text-center">
      <p></p>
        <p>
           <a class="btn btn-twitter btn-lg" href="https://twitter.com/spring_ghana"><i class="icon-twitter icon-large" style="color:#fff;"></i></a>
           <a class="btn btn-facebook btn-lg" href="https://www.facebook.com/springghhome/?ref=br_rs"><i class="icon-facebook icon-large" style="color:#fff;"></i></a>
           <a class="btn btn-google-plus btn-lg" href="https://www.instagram.com/spring_ghana/"><i class="icon-instagram icon-large" style="color:#fff;"></i></a> 
        </p>
        <p class="fa fa-copyright">Spring 2016</p>
      </div>
    </div>
  </footer>

  <!-- script references -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
  </body>

