<div class="admin-page">
  <div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-0 form-box">


    	<div class="row">

    		<div class="col-lg-12 col-md-12">  
    			<div class="panel panel-default">
    				<div class="panel-heading">
    				<h2><i class="fa fa-user"></i><strong>List of Reports Filed Against <%= @worker.first_name %></strong></h2>
    				</div>
    				<div class="panel-body">
    					<table class="table table-striped table-advance table-hover">
    						<thead>
    						<tr>
    						<tbody>
                                    <% if @reports.any? %>
    								<% @reports.each do |report| %>
    							<tr>

    								<li>
    								<h4><%= link_to truncate(report.event, length: 25), admin_worker_report_path(@worker, report) %></h4>
                                    </li>
    								
    							</tr>
    							    <% end %>
                                    <% else %>
                                    <tr>
                                        <p>no report filed</p>
                                    </tr>
                                    <% end %>
    						</tbody>
    						</tr>
    						</thead>
    					</table>
    				</div>
    			</div>
                                    <%= link_to fa_icon("arrow-circle-left") + " back", :back, class: "btn btn-primary" %>

    		</div>
    	</div>