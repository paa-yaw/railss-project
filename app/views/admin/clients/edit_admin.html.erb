<% breadcrumb :edit_admin, @admin %>
<div class="admin-page">
	<div class="container">
		<div class="row">
			<div class="col-lg-10 ">
				<div class="col-sm-10 col-sm-offset-2 form-box">

					<section class="panel">
						<header class="panel-heading">
							<h2>Edit Admin Registration Form</h2> 
						</header>
						<div class="panel-body">
							

							<%= simple_form_for @admin, url: admin_update_admin_path(@admin), method: :patch do |f| %>
							<div class="row">
							<div class="col-md-3">
									<%= f.input :first_name %>
									<%= f.input :last_name %>
								</div>

								<div class="row">
									<div class="col-md-3">
										<%= f.input :email %>
										<%= f.input :password %>
									</div>

									<div class="row">
										<div class="col-md-3">
											<%= f.input :phone_number %>
											<%= f.input :location %>
										</div>

										<div class="row">
											<div class="col-md-3">
												<%= f.input :tag, :collection => ["online", "offline"], :as => :radio_buttons, :item_wrapper_class => "inline", :label => "online/offline?" %>
												<%= f.input :admin %>
											</div>
										</div>

										<div class="text-center">
											<% if @admin.persisted? %>
											<%= f.button :submit, "Edit Admin", class: "btn-primary" %>
											<% else %>	
											<%= f.button :submit, "Create Admin", class: "btn-primary" %>
											<% end %>
										</div>
										<% end %>

									</div>
								</section>
							</div>
						</div>
					</div>
				</div>
			</div>
			<