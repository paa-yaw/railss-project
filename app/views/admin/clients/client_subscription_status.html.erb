<div class="admin-page">
	<div class="container">
		<div class="row">
			<div class="col-sm-9 col-sm-offset-1 form-box">

				<div class="row">
					
					<div class="col-lg-12 col-md-12">  
						<div class="panel panel-default">
							<div class="panel-heading">
								<strong>Subscription Status of Clients <%= link_to fa_icon("envelope") + " send newsletter to all subscribed clients", admin_send_weekly_newsletter_path, class: "btn btn-primary pull-right" %></strong>
							</div>
							<div class="panel-body">
								<table class="table bootstrap-datatable countries">
									<thead>
										<tr>
											<th>Name</th>
											<th>status</th>
											
										</tr>
									</thead>

									<% @clients.each do |client| %>
									<tbody>
										<tr>
											<td><%= link_to client.first_name, admin_client_path(client) %>, <%= link_to client.last_name, admin_client_path(client) %></td>
											<td><% if client.subscribe == true %>
												<p class="label label-success"><i class="fa fa-envelope" aria-hidden="true"></i>
													subscribed</p>
													<% else %>
													<p class="label label-danger"><i class="fa fa-ban" aria-hidden="true"></i>
														unsubscribed</p>
														<% end %>
													</td>
										</tr>
									</tbody>
									<% end %>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>