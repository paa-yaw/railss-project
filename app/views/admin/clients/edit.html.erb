<% breadcrumb :edit_client, @client %>
<div class="admin-page">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-sm-offset-1">
				<div class="col-sm-10 col-sm-offset-2 form-box form-content">
					
					<section class="panel">
						<header class="panel-heading">
							<h2>Edit Client Registration Form.</h2> 
						</header>
						<div class="panel-body">

							<%= simple_form_for @client, url: admin_update_client_path(@client), method: :patch do |f| %>
							<div class="row">
							<div class="col-md-3">
									<%= f.input :first_name %>
									<%= f.input :last_name %>
								</div>

								<div class="row">
									<div class="col-md-3">
										<%= f.input :email %>
										<%= f.input :password %>
									</div>

									<div class="row">
										<div class="col-md-3">
											<%= f.input :phone_number %>
											<%= f.input :location %>
										</div>

										<div class="row">
											<div class="col-md-3">
												<%= f.input :tag, :collection => ["online", "offline"], :as => :radio_buttons, :item_wrapper_class => "inline", :label => "online/offline?" %>
											</div>
										</div>




										<div class="text-center">
											<% if @client.admin == true %>
											<%= f.button :submit, "Create Admin", class: "btn-primary" %>
											<% else %>
											<% if @client.persisted? %>
											<%= f.button :submit, "Edit Client", class: "btn-primary" %>
											<% else %>
											<%= f.button :submit, "Create Client", class: "btn-primary" %>
											<% end %>
											<% end %>
										</div>
										<% end %>

									</div>
								</section>
							</div>

						</div>
					</div>
				</div>
			</div>