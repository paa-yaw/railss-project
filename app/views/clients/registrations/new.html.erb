<div class="container-fluid" >
  <div class="row">
    <!-- <div class="col-sm-6 form-box wow fadeInUp content-box"></div> -->
    <div class="col-lg-4 col-lg-offset-4">

      <div class="panel-group">
       <div class="panel panel-info">
        <!-- Default panel contents -->
        <div class="panel-heading">
          <div class="form-top-right text-center">
            <h2 class="panel-title text-center">Provide Your Details</h2>
          </div>        
        </div>
        
        <div class="panel-body">

          <div class="form-bottom">
           <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
           <%= devise_error_messages! %>

           <% @token = params[:referral_code] %>
           
           <% if @token != nil %>
             <%= f.hidden_field_tag :referral_code => @token %>
           <% end %>
           
           <div class="row">
             <div class="col-md-6">
               <div class="field">
                <%= f.label :first_name, :class=>"login-label"%><br />
                <%= f.text_field :first_name, autofocus: true, :class=>"form-control"  %>
              </div>
             </div>
             <div class="col-md-6">
              <div class="field">
                <%= f.label :last_name, :class=>"login-label"%><br />
                <%= f.text_field :last_name, autofocus: true, :class=>"form-control"  %>
              </div>
             </div>
           </div>
               <br>
          <div class="field">
            <%= f.label :email, :class=>"login-label" %><br />
            <%= f.email_field :email, :class=>"form-control"  %>
          </div>
                <br>
               <div class="row">
                 <div class="col-md-6">
                    <div class="field">
                      <%= f.label :password, :class=>"login-label" %>  <br>
                      <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %><br />
                      <%= f.password_field :password, autocomplete: "off", :class=>"form-control" %>
                    </div>
                 </div>
                 <div class="col-md-6">
                    <div class="field">
                      <%= f.label :password_confirmation, :class=>"login-label" %><br />
                      <br>
                      <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control"  %>
                    </div>
                 </div>
               </div>
          <br>
            <div class="field">
              <%= f.label :phone_number, :class=>"login-label"%><br />
              <%= f.text_field :phone_number, maxlength: "10", placeholder:"024 123 4567", type:"tel", :class=>"form-control" %>
            </div>
<br>
            <div class="field">
              <%= f.label :location, :class=>"login-label" %><br />
              <%= f.text_field :location, placeholder:"Street Address, House Number, Area",:class=>"form-control" %>
            </div>
<br>
            <div class="actions">
              <%= f.submit "Continue", :class=>"btn btn-default btn-lg btn-block submit_button col-md-3", :id =>"cleanButton" %>
            </div>
            <div class="actions">
              <%= render "clients/shared/links" %>
            </div>
            <% end %>
          </div>

        </div>

      </div>
    </div>

  </div>
</div>
</div>






