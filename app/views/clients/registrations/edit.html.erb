<div class="container-fluid" >
  <div class="row">
    <!-- <div class="col-sm-6 form-box wow fadeInUp content-box"></div> -->

    <div class="col-lg-4 col-lg-offset-4 col-sm-4 col-sm-offset-4">

     <div class="panel-group">
       <div class="panel panel-info">
        <!-- Default panel contents -->
        <div class="panel-heading">
          <h2 class="panel-title text-center" style="color:#fff;">Edit Profile</h2>
        </div>
        
        <div class="panel-body">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>
          <div class="row">
            <div class="col-md-6 col-sm-12 col-xs-12">
            <div class="field">
              <%= f.label :first_name, :class=>"login-label"%><br />
              <%= f.text_field :first_name, autofocus: true, :class=>"form-control"  %>
            </div>
          </div>
          <div class="col-md-6 col-sm-12 col-xs-12">
            <div class="field">
              <%= f.label :last_name, :class=>"login-label"%><br />
              <%= f.text_field :last_name, autofocus: true, :class=>"form-control"  %>
            </div>
          </div>
          </div>
          <br>
          <div class="field">
            <%= f.label :email, :class=>"login-label" %><br />
            <%= f.email_field :email, autofocus: true, :class=>"form-control" %>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <br>
          <div class="row">
            <div class="col-md-6 col-sm-12 col-xs-12">
              <div class="field">
                <%= f.label :password, :class=>"login-label" %> <br><i>(leave blank to keep password)</i><br />
                <%= f.password_field :password, autocomplete: "off", autofocus: true, :class=>"form-control" %>
              </div>
            </div>  
            <div class="col-md-6 col-sm-12 col-xs-12">
              <div class="field">
                <%= f.label :password_confirmation, :class=>"login-label" %><br /><br>
                <%= f.password_field :password_confirmation, autocomplete: "off", autofocus: true, :class=>"form-control" %>
              </div>
            </div>

          </div>
          <br>
          <div class="field">
            <%= f.label :current_password, :class=>"login-label" %> <i>(enter current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "off", autofocus: true, :class=>"form-control" %>
          </div>
          <br>
          <div class="field">
            <%= f.label :phone_number, :class=>"login-label"%><br />
            <%= f.text_field :phone_number, maxlength: "10", placeholder:"024 123 4567", type:"tel", :class=>"form-control" %>
          </div>
          <br>
          <div class="field">
            <%= f.label :location, :class=>"login-label" %><br />
            <%= f.text_field :location, :class=>"form-control" %>
          </div>
          <br>
          <div class="actions">

            <%= f.submit "Update", :class=>"btn-block btn-lg btn-login btn-primary" %>

          </div>
          <% end %>
<br>
          <!-- <h4>Cancel my account</h4> -->
<div class="pull-right">
  
          <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

</div>
          <%= link_to "Back", :back %>
          
        </div>
      </div>
    </div>

  </div>
</div>
</div>